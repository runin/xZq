<template>
	<header class="like-header-vue">
		<a v-tap="{methods : navTo, url: '/myHome'}" class="back" href="javascript:void(0)">
			<img src="/static/photo/icon-arrow-left.png" />
		</a>
		<a v-tap="{methods : navTo, url: '/myLikes'}"  v-bind:class="{ 'active' : isLikes }" class="tab-item" href="javascript:void(0)">喜欢</a>
		<a v-tap="{methods : navTo, url: '/myVisits'}" v-bind:class="{ 'active' : isVisits }" class="tab-item" href="javascript:void(0)">访客</a>
	</header>
</template>

<script>
export default{

	data(){
		return {
			isLikes: false,
			isVisits: false
		}
	},

	methods: {
		back: function(){
			this.$router.push('/home');
			return false;
		},

		navTo: function(params){
			this.$router.push(params.url);
			return false;
		}
	},

	created: function(){
		if(this.$route.path.indexOf('/myVisits') >= 0){
			this.isVisits = true;
		}else{
			this.isLikes = true;
		}
	}
}
</script>

